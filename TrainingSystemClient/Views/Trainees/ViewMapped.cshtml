@model TrainingSystemClient.Models.Trainee;
@{
    ViewData["Title"] = "ViewMapped";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ViewMapped</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Filtered" asp-controller="Trainees">
            <div class="form-group">
                <label asp-for="MappedTo" class="control-label">Mapped For</label>
                <input asp-for="MappedTo" class="form-control" />
                <span asp-validation-for="MappedTo" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
        </form>
    </div>
</div>
